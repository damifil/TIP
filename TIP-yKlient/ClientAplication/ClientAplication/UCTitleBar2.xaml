<UserControl x:Class="ClientAplication.UCTitleBar2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientAplication"
             mc:Ignorable="d" 
               d:DesignHeight="40" d:DesignWidth="750">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="#8AACC8" >
            <Button x:Name="minimalizeButon"  Content="&#xE15B;" Margin="670,0,0,0"  Click="minimalizeButon_Click" Style="{StaticResource buttonIcoTitleBar}"/>
            <Button x:Name="closeButon"   Content="&#xE5CD;" Click="closeButon_Click" Style="{StaticResource buttonIcoTitleBar}"/>

        </StackPanel>

    </Grid>
</UserControl>
