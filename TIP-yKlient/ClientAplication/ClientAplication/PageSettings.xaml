      d:Height="500" d:Width="650"
      Title="SettingsPage">

    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="490"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name = "menuSP"  Grid.Column="0"  Grid.Row="0"  Margin="10,10,0,0">
                <local:UserControl1  />
            </StackPanel>


        <StackPanel x:Name = "setingsSP"  Grid.Column="1" Grid.Row="0" Margin="10,10,0,0">
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Ustawienia"  FontSize="24"/>
